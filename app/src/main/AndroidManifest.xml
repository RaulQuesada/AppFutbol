<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.raulquesada.appfutbol">

    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true">
        <activity
            android:name=".OpcionesActivity"
            android:theme="@style/Theme.AppFutbol" />
        <activity
            android:name=".EquipoActivity"
            android:theme="@style/Theme.AppFutbol" />
        <activity
            android:name=".MainActivity"
            android:theme="@style/Theme.AppFutbol">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service android:name=".ResultService"
            android:enabled="true"/>

        <receiver android:name="com.raulquesada.appfutbol.AlarmReceiver"
            android:enabled="true"
            />
    </application>

</manifest>