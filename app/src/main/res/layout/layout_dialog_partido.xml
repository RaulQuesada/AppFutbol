<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingBottom="10dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/ivCompeticionClasificacion"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_launcher_foreground" />

    <TextView
        android:id="@+id/tvCompeticionNameClasificacion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="CompeticiÃ³n"
        android:textColor="@color/primary"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/ivCompeticionClasificacion"
        app:layout_constraintTop_toTopOf="@+id/ivCompeticionClasificacion" />

    <TextView
        android:id="@+id/tvTemporadaClasificacion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Temporada 2020-2021"
        android:textColor="@color/green"
        app:layout_constraintStart_toStartOf="@+id/tvCompeticionNameClasificacion"
        app:layout_constraintTop_toBottomOf="@+id/tvCompeticionNameClasificacion" />

    <TextView
        android:id="@+id/tvDialogJornada"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Jornada"
        android:textColor="#364E32"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivCompeticionClasificacion" />

    <TextView
        android:id="@+id/tvDialogFecha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="TextView"
        android:textColor="#000000"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvDialogJornada" />

    <ImageView
        android:id="@+id/ivDialogResultLocal"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvDialogFecha"
        app:srcCompat="@drawable/ic_launcher_foreground" />

    <ImageView
        android:id="@+id/ivDialogResultVisitor"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/ivDialogResultLocal"
        app:srcCompat="@drawable/ic_launcher_foreground" />

    <TextView
        android:id="@+id/tvDialogResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1-0"
        android:textColor="@color/primary"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/ivDialogResultLocal"
        app:layout_constraintEnd_toStartOf="@+id/ivDialogResultVisitor"
        app:layout_constraintStart_toEndOf="@+id/ivDialogResultLocal"
        app:layout_constraintTop_toTopOf="@+id/ivDialogResultLocal" />

    <TextView
        android:id="@+id/tvDialogChannel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Canal"
        android:textSize="10sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivDialogResultLocal" />

    <ImageView
        android:id="@+id/ivDialogChannel"
        android:layout_width="14dp"
        android:layout_height="14dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toStartOf="@+id/tvDialogChannel"
        app:layout_constraintTop_toBottomOf="@+id/ivDialogResultLocal"
        app:srcCompat="@drawable/ic_launcher_foreground" />
</androidx.constraintlayout.widget.ConstraintLayout>