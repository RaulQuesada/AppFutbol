<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="4dp"
    android:background="@drawable/customborder">

    <ImageView
        android:id="@+id/ivJugadorPlantilla"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginStart="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_launcher_foreground" />

    <TextView
        android:id="@+id/tvNombreJugador"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="6dp"
        android:text="Nombre"
        android:textColor="@color/primary"
        android:textSize="24sp"
        android:textStyle="bold|italic"
        app:layout_constraintStart_toEndOf="@+id/ivJugadorPlantilla"
        app:layout_constraintTop_toTopOf="@+id/ivJugadorPlantilla" />

    <TextView
        android:id="@+id/tvApellidosJugador"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Apellidos"
        android:textColor="@color/green"
        android:textSize="12sp"
        android:textStyle="italic"
        app:layout_constraintBottom_toBottomOf="@+id/ivJugadorPlantilla"
        app:layout_constraintStart_toStartOf="@+id/tvNombreJugador"
        app:layout_constraintTop_toBottomOf="@+id/tvNombreJugador" />

    <TextView
        android:id="@+id/tvPaisJugador"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ES"
        app:layout_constraintEnd_toEndOf="@+id/ivJugadorPlantilla"
        app:layout_constraintStart_toStartOf="@+id/ivJugadorPlantilla"
        app:layout_constraintTop_toBottomOf="@+id/ivJugadorPlantilla" />

    <TextView
        android:id="@+id/tvPosicionJugador"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:fontFamily="sans-serif-condensed-medium"
        android:text="PosiciÃ³n"
        android:textColor="#364036"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvNombreJugador" />

    <TextView
        android:id="@+id/tvDorsalJugador"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="13"
        android:textColor="#FF364036"
        android:textSize="44sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/tvPosicionJugador"
        app:layout_constraintTop_toBottomOf="@+id/tvPosicionJugador" />
</androidx.constraintlayout.widget.ConstraintLayout>