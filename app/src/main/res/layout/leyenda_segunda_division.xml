<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cLeyendaSegundaDivision"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:visibility="visible">

    <Button
        android:id="@+id/bColorAsc"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginStart="16dp"
        android:backgroundTint="@color/asc"
        android:clickable="false"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvLeyendaAscenso"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="3dp"
        android:text="Ascenso LaLiga Santander"
        android:textColor="@color/black"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/bColorAsc"
        app:layout_constraintStart_toEndOf="@+id/bColorAsc"
        app:layout_constraintTop_toTopOf="@+id/bColorAsc" />

    <Button
        android:id="@+id/bColorPlayOff"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginStart="16dp"
        android:backgroundTint="@color/play"
        android:clickable="false"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bColorAsc" />

    <TextView
        android:id="@+id/tvLeyendaPlayOff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="3dp"
        android:text="Play Off Ascenso"
        android:textColor="@color/black"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/bColorPlayOff"
        app:layout_constraintStart_toEndOf="@+id/bColorPlayOff"
        app:layout_constraintTop_toBottomOf="@+id/tvLeyendaAscenso" />

    <Button
        android:id="@+id/bColorDescensoSegunda"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginStart="16dp"
        android:backgroundTint="@color/desc"
        android:clickable="false"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bColorPlayOff" />

    <TextView
        android:id="@+id/tvLeyendaDescensoSegunda"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="3dp"
        android:text="Descenso"
        android:textColor="@color/black"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/bColorDescensoSegunda"
        app:layout_constraintStart_toEndOf="@+id/bColorDescensoSegunda"
        app:layout_constraintTop_toBottomOf="@+id/tvLeyendaPlayOff" />

</androidx.constraintlayout.widget.ConstraintLayout>